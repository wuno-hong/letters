<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".email.EmailFragment">

    <Button
        android:id="@+id/bt_get_letter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/get"
        app:layout_constraintBottom_toBottomOf="@+id/bt_write_letter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt_write_letter" />

    <Button
        android:id="@+id/bt_write_letter"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_marginTop="224dp"
        android:background="@drawable/write"
        app:layout_constraintEnd_toStartOf="@+id/bt_get_letter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>